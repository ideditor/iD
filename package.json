{
  "name": "rapid-sdk",
  "version": "1.0.0-pre.1",
  "private": true,
  "description": "Map editing made easy",
  "homepage": "https://github.com/rapideditor/rapid-sdk#readme",
  "repository": "github:rapideditor/rapid-sdk",
  "license": "ISC",
  "contributors": [
    "Ben Clark <clarkben@fb.com> (https://github.com/bonkles)",
    "Bryan Housel <bhousel@gmail.com> (https://github.com/bhousel)",
    "Danny Krause (https://github.com/vanreece)",
    "Milos Brzakovic <mbrzakovic@microsoft.com> (https://github.com/mbrzakovic)"
  ],
  "keywords": [
    "map",
    "editor"
  ],
  "type": "module",
  "workspaces": [
    "packages/**"
  ],
  "devDependencies": {
    "@types/geojson": "^7946.0.10",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.1",
    "esbuild": "~0.17.11",
    "esbuild-jest": "~0.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^3.2.4",
    "lerna": "^6.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "shx": "^0.3.4",
    "typedoc": "^0.23.26",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "all": "run-s clean build pretty",
    "build": "lerna run build",
    "build:js": "lerna run build:js",
    "build:types": "lerna run build:types",
    "clean": "lerna run clean --parallel",
    "docs": "typedoc",
    "pretty": "prettier --write \"./**/*.ts\"",
    "test": "lerna run test"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/*.(ts|js)"
    ],
    "coverageDirectory": "<rootDir>/.coverage",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/*.test.(ts|js)"
    ],
    "transform": {
      "^.+\\.ts$": [
        "esbuild-jest",
        {
          "format": "esm",
          "sourcemap": "true"
        }
      ]
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
